{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc-9 build active file",
            "command": "/usr/bin/gcc-9",
            "args": [
                "-g3", //debug mode
                "${fileDirname}/*.c", //get every c files
                "-O0", // set optimization levet to 0 
                "-o", // set custom ELF file name
                "${fileDirname}/${fileBasenameNoExtension}", // main.c -> main(ELF file)
                "-Wall", // strict warnings
                "-Wextra", // very strict warnings
                "-pedantic-errors", // warnings about c standard
                "-pthread", //pthread.h
                "-lncurses", // curses.h (getch() etc...)
                "-lm" // math.h
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
